generator prismaClient {
  provider = "prisma-client-js"
}

datasource database {
  provider = "postgresql"
  url      = env("APP_PG_DATABASE_URL")
}

model InventoryItem {
  id           String   @id @default(uuid()) // Unique identifier for each item
  itemName     String   // Name of the item
  category     String   // Type or category of the item
  quantity     Int      // Total quantity available
  unitCost     Float    // Cost per unit
  createdDate  DateTime @default(now())      // Timestamp when record was created
  modifiedDate DateTime @updatedAt           // Timestamp for the latest update
}
